{
    "app-id": "io.gitlab.floodlight.Presenter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "floodlight-presenter",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=host:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/libsoup/libsoup-2.4.json",
        {
            "name": "presenter",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/floodlight/presenter.git",
                    "tag": "0.10.2",
                    "commit": "a76796891ba79897f4f497688c596f063cfbb610"
                },
                {
                    "type": "patch",
                    "path": "fix-regex.patch"
                },
                {
                    "type": "patch",
                    "path": "fix_appdata.patch"
                }
            ]
        }
    ]
}
